generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model StudentModel {
  id                            String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName                     String
  lastName                      String
  dob                           DateTime
  gender                        String
  email                         String   @unique
  phone                         String   @unique
  address                       String
  school                        String
  university                    String
  motivation                    String
  programmingKnowledge          String
  github                        String?
  course                        String
  firstStageCompleted           Boolean? @default(false) // Birinci merhele testi 
  secondStageInterviewCompleted Boolean? @default(false) // Ä°kinci merhele musahibe
  courseCompleted               Boolean? @default(false) // Kurs bitisi haqqinda melumat
}
